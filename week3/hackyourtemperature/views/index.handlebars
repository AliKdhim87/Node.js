
<form action="/weather" method="POST">
    <input type="text" placeholder="Enter a City" name="cityName">
    <button type="submit" name="action">Search</button>
</form>
<div class=" row text-center">
    <ul class="forecast">
        <li><img  src="http://openweathermap.org/img/w/{{weather.icon}}.png" alt=""></li>
        <li>{{weather.city}}</li>
        <li>{{weather.temp}}</li>
        <li>{{weather.description}}</li>
        <li>{{err}}</li>
    </ul>
    <ul class="extra-info">
        <li>{{weather.pressure}}</li>
        <li>{{weather.temp_min}}</li>
        <li>{{weather.temp_max}}</li>
    </ul>
</div>
